<local:InboxTemplateCell 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Sample.DefaultInboxTemplateCell"
	xmlns:local="clr-namespace:Sample;assembly=Sample"
	Height = "44">
	<StackLayout Orientation="Vertical" Spacing="0" Padding="5">
		<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
			<Label x:Name="Subject" LineBreakMode="TailTruncation" />
			<Label x:Name="Date" XAlign="End" HorizontalOptions="FillAndExpand" LineBreakMode="NoWrap"  FontSize="Small" />
		</StackLayout>
		<Label x:Name="Content" LineBreakMode="TailTruncation" TextColor="Gray" FontSize="Small" />
	</StackLayout>
</local:InboxTemplateCell >
