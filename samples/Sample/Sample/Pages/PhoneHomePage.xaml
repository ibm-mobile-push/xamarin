<ContentPage 
    xmlns:local="clr-namespace:Sample;assembly=Sample"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Sample.PhoneHomePage">
    <StackLayout>
        <StackLayout.BackgroundColor>
            <OnPlatform x:TypeArguments="Color" iOS="#EFEFF4" />
        </StackLayout.BackgroundColor>
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection>
                    <local:RightDetailCell Text="User Id" x:Name="UserId" />
                    <local:RightDetailCell Text="Channel Id" x:Name="ChannelId" />
                    <local:RightDetailCell Text="Execute Phone Home" x:Name="PhoneHome" />
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>
</ContentPage>
