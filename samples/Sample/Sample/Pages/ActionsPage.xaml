<ContentPage 
	xmlns:local="clr-namespace:Sample;assembly=Sample"
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Sample.ActionsPage"
	Title="Push Actions">
	<StackLayout >
		<TableView Intent="Settings" HasUnevenRows="true">
		    <TableRoot>
		        <TableSection Title="Standard Action">
		      		<local:RightDetailCell Text="Type" x:Name="StandardType" />
		      		<local:NormalEntryCell Label="Name" x:Name="StandardName" />
		      		<local:NormalEntryCell Label="Value" x:Name="StandardValue" />
		      		<TextCell Text="JSON" x:Name="StandardJSON" />
		        </TableSection>
		        <TableSection Title="Custom Action">
		      		<local:NormalEntryCell Label="Type" x:Name="CustomType" />
		      		<local:NormalEntryCell Label="Name" x:Name="CustomName" />
		      		<local:NormalEntryCell Label="Value" x:Name="CustomValue" />
		      		<TextCell Text="JSON" x:Name="CustomJSON" />
	      		</TableSection>
		    </TableRoot>
		</TableView>
	</StackLayout>
</ContentPage>
