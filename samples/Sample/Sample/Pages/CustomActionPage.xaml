<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Sample.CustomActionPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="15">
                <StackLayout Padding="0,15,0,0">
                    <Label Text="Custom Action Type" FontAttributes="Bold" />
                    <Entry Text="custom" x:Name="TypeEntry" HorizontalOptions="FillAndExpand" />
                </StackLayout>
                
                <StackLayout Padding="0,15,0,0">
                    <Label Text="Register Custom Action" FontAttributes="Bold" />
                    <Button Text="Register Custom Aciton with Type" HorizontalOptions="Start" x:Name="RegisterButton" />
                </StackLayout>
                
                <StackLayout Padding="0,15,0,0">
                    <Label Text="Unregister Custom Action" FontAttributes="Bold" />
                    <Button Text="Unregister Custom Aciton with Type" HorizontalOptions="Start" x:Name="UnregisterButton" />
               </StackLayout>
                
                <StackLayout Padding="0,15,0,0">
                    <Label Text="Status" FontAttributes="Bold" />
                    <Label Text="No status yet." x:Name="Status" TextColor="Gray" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
