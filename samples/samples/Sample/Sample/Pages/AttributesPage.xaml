<ContentPage 
	xmlns:local="clr-namespace:Sample;assembly=Sample"
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Sample.AttributesPage"
	Title="User Attributes">
	<StackLayout>
		<TableView Intent="Settings" HasUnevenRows="true">
		    <TableRoot>
		        <TableSection Title="Send User Attributes">
		      		<local:NormalEntryCell Label="Enter your attribute" x:Name="Name" />
		      		<local:NormalEntryCell Label="Enter your value" x:Name="Value" />
		      		<ViewCell Height="90">
						<StackLayout Orientation="Vertical" Padding="15,15">
							<Label Text="Choose an Action" />
							<local:SegmentedControl HorizontalOptions="End" x:Name="Action">
								<local:SegmentedControl.Children>
									<local:SegmentedControlOption Text="Update" />
									<local:SegmentedControlOption Text="Delete" />
								</local:SegmentedControl.Children>
							</local:SegmentedControl>
						</StackLayout>
		      		</ViewCell>
		      		<local:RightStatusCell Text="Send via Queue" x:Name="SendQueue" />
		        </TableSection>
		    </TableRoot>
		</TableView>
	</StackLayout>
</ContentPage>
